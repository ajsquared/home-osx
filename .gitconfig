[user]
    name = Andrew Johnson
    email = andrew@andrewjamesjohnson.com
[github]
    user = ajsquared
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[alias]
    ap = add --patch
    bl = blame -w
    br = branch
    c = commit -a -m
    ci = commit
    co = checkout
    df = diff
    l = log --graph --decorate
    lg = log --decorate -p
    lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pom = push origin master
    po = "!git push --set-upstream origin \"$(git rev-parse --abbrev-ref HEAD)\""
    fpush = "!git push -f origin \"$(git rev-parse --abbrev-ref HEAD)\""
    pullr = pull --rebase
    rpull = pull --rebase --stat
    prom = pull --rebase --stat origin master
    s = status
    unstage = reset
    rim = rebase -i master
    amend = commit --amend
[merge]
    tool = ediff
[mergetool "ediff"]
    cmd = emacsclient -a \"\" --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
[push]
    default = simple
[core]
    preloadindex = true
    excludesfile = ~/.gitignore
[diff]
    noprefix = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
